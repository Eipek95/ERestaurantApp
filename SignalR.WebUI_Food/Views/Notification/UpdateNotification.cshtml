@model UpdateNotificationViewModel
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" class="form-control" asp-for="ID">
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" asp-for="Date">
                            </div>
                            <div class="form-group">
                                <label asp-for="Type">Bildirim Türü</label>
                                <select class="form-control" asp-for="Type">
                                    <option value="notif-icon notif-primary">notif-icon notif-primary</option>
                                    <option value="notif-icon notif-success">notif-icon notif-success</option>
                                    <option value="notif-icon notif-danger">notif-icon notif-danger</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Icon">Bildirim Iconu</label>
                                <select class="form-control" asp-for="Icon">
                                    <option value="la la-user-plus"><i class="la la-user-plus"></i>la la-user-plus</option>
                                    <option value="la la-comment"><i class="la la-comment"></i>la la-comment</option>
                                    <option value="la la-heart"><i class="la la-heart"></i>la la-heart</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description">
                            </div>

                            <div class="form-check">
                                <label>Durumu</label><br />
                                <label class="form-radio-label">
                                    <input class="form-radio-input" type="radio" asp-for="Status" value="True" checked="">
                                    <span class="form-radio-sign">Okundu</span>
                                </label>
                                <label class="form-radio-label ml-3">
                                    <input class="form-radio-input" type="radio" asp-for="Status" value="False">
                                    <span class="form-radio-sign">Okunmadı</span>
                                </label>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-outline-success" type="submit">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

