@{
    ViewData["Title"] = "AssignRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<AssignRoleToUserViewModel>



<h4>Kullanıcıya Görev Atama</h4>
<hr />


<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="AssignRoleToUser" method="post" asp-route-userId="@ViewBag.userId">
            <div class="mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist" />
                        <label class="form-check-label" for="exampleCheck1"> @Model[i].Name</label>
                        <input type="hidden" asp-for="@Model[i].Name" />
                        <input type="hidden" asp-for="@Model[i].Id" />
                    </div>
                }

            </div>
            <button type="submit" class="btn btn-primary mt-3">Rol Ata</button>
        </form>

        <div class="mt-3">
            <a asp-action="UserList" asp-controller="AdminLayout">Kullanıcı Listesine Geri Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}