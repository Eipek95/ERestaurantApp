@model RoleCreateViewModel
@{
    ViewData["Title"] = "RoleAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Rol Oluşturma</h4>
<hr />


<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="RoleAdd" method="post">
            <div class="mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Name" class="form-label">Rol Adı</label>
                <input type="text" class="form-control" asp-for="Name" aria-describedby="emailHelp">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Oluştur</button>
        </form>

        <div class="mt-3">
            <a asp-action="Index" >Rol Listesine Geri Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}