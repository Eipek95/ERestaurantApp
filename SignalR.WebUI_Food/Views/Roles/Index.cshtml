@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@model List<ResultRoleViewModel>

<h1>Görev Listesi</h1>


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rol İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Görev Listesi</div>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Görev Adı</th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td scope="row">@role.Id</td>
                                            <td>@role.Name</td>
                                            <td><a asp-action="RoleUpdate" asp-route-id="@role.Id" class="btn btn-success btn-sm">Düzenle</a></td>
                                            <td><a asp-action="RoleDelete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Sil</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 offset-md-3">
                <a class="btn btn-info form-control" asp-action="RoleAdd" asp-controller="Roles">Rol Ekle</a>
            </div>
        </div>
    </div>
</div>