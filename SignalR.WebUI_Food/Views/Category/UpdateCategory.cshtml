@model UpdateCategoryViewModel
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Kategori Düzenleme</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<input type="hidden" class="form-control" asp-for="Id">
							</div>
							<div class="form-group">
								<label asp-for="Name">Kategori Adı</label>
								<input type="text" class="form-control" asp-for="Name">
							</div>
							<div class="form-check">
								<label>Durumu</label><br />
								<label class="form-radio-label">
									<input class="form-radio-input" type="radio" asp-for="Status" value="True">
									<span class="form-radio-sign">Aktif</span>
								</label>
								<label class="form-radio-label ml-3">
									<input class="form-radio-input" type="radio" asp-for="Status" value="False">
									<span class="form-radio-sign">Pasif</span>
								</label>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-outline-primary" type="submit">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

