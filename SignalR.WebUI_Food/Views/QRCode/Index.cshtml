
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">QRCODE Oluşturma İşlemleri</h4>
		<div class="row">
			<div class="col-md-6">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni QRCODE Oluştur</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label name="value">QR Code Adı</label>
								<input type="text" class="form-control" name="value">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-outline-warning" type="submit">Oluştur</button>
						</div>
					</div>
				</form>
			</div>
            <div class="col-md-6">
				@if (ViewBag.QrCodeImage != null)
				{
					<img src="@ViewBag.QrCodeImage" alt="qr" style="width:400px;height:400px" />
				}
			</div>
		</div>
	</div>
	
</div>



