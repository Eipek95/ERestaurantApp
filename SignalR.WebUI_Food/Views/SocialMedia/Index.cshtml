@model List<ResultSocialMediaViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Url</th>
                                        <th>Icon</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Title</td>
                                            <td>@item.Url</td>
                                            <td>@item.Icon</td>
                                            <td><a href="/SocialMedia/DeleteSocialMedia/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/SocialMedia/UpdateSocialMedia/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-outline-info">Yeni Sosyal Medya Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

