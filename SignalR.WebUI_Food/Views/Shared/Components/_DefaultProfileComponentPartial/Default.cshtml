@model UpdateUserViewModel

<div class="col-md-12">

    <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        @* burada controller tarafındaki string.empty keyine sahip errorlar gözükecektir.modelview içerisindeki hatalar her biri kendi altında gözkükür *@
    </div>


    @if (TempData["SuccessMessage"] != null)
    {

        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>

    }
    <div class="card">
        <div class="card-header">
            @Model.Name  @Model.Surname
        </div>
        <div class="card-body">
            <form method="post" asp-action="Index" asp-controller="MyProfile">
                <div class="form-group">
                    <label asp-for="Name">Adı</label>
                    <input type="text" class="form-control" id="name" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Soyadı</label>
                    <input type="text" class="form-control" id="surname" asp-for="Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username">Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="username" asp-for="Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mail">E-posta Adresi</label>
                    <input type="email" class="form-control" id="email" asp-for="Mail">
                    <span class="text-danger" asp-validation-for="Mail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">Telefon</label>
                    <input type="text" class="form-control" id="phone" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label asp-for="City">Şehir</label>
                    <input type="text" class="form-control" id="city" asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate">Doğum Tarihi</label>
                    <input type="date" class="form-control" id="birthDate" asp-for="BirthDate">
                </div>

                <div class="form-group">
                    <label asp-for="Gender">Cinsiyet</label>
                    <br />
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" id="unknown" value="Belirtilmedi">

                        <label class="form-check-label" asp-for="Gender">Belirtilmedi</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" id="female" value="Kadın">
                        <label class="form-check-label" asp-for="Gender">Kadın</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" id="male" value="Erkek">
                        <label class="form-check-label" asp-for="Gender">Erkek</label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-warning form-control">Güncelle</button>
                </div>

            </form>
        </div>

    </div>
</div>