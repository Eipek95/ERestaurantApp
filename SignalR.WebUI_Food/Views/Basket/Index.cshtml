@model ResultCartViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    int count = 0;
    decimal basketTotalPrice = 0;
    decimal basketTotalPriceWithTax = 0;
    decimal discountPrice = (Model.TotalPrice() * Model.DiscountRate / 100);
}
@await Component.InvokeAsync("_UILayoutNavbarComponentPartial")
<br />
<br />
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-dark mb-30">
                <a class="breadcrumb-item text-white" href="/Default/Index">Ana Sayfa</a>
                <a class="breadcrumb-item text-white" href="/Menu/Index">Menü</a>
                <span class="breadcrumb-item active">Sepetim</span>
            </nav>
        </div>
    </div>
</div>


@if (Model.CartItems.Count() > 0)
{
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Ürün Görsel</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Adet</th>
                            <th>Toplam</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.CartItems)
                    {

                        count++;
                        <tbody class="align-middle">
                            <tr>
                                <td class="align-middle">@count</td>
                                <td class="align-middle"><img src="@item.Product.ImageUrl" alt="@item.Product.Name.ToLower()" width="90" /></td>
                                <td class="align-middle">@item.Product.Name</td>
                                <td class="align-middle">@item.Product.Price</td>
                                <td class="align-middle">@item.Quantity</td>
                                <td class="align-middle">@(item.Quantity*item.Product.Price) ₺</td>
                                <td class="align-middle btn-delete">
                                    <a asp-controller="Menu" asp-action="DeleteBasket" asp-route-ProductId="@item.ProductId" class="btn btn-sm btn-danger">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    }

                </table>
            </div>

            <div class="col-lg-4 mt-3">
                <form method="get">
                    <div class="input-group">
                        <input type="text" id="couponcode" class="form-control border-2 p-4" style="border-radius:5px; margin-right:7px" placeholder="Kupon Kodunu Giriniz..." name="code" />
                        <div>
                            <button style="height:48px; padding-top:11px; font-weight:600; font-size:15px; font-family:cursive; color:#2f3640" class="btn btn-warning" id="btncouponcode" type="submit">Uygula</button>
                        </div>
                    </div>
                </form>
                <h5 class="section-title position-relative mb-3 mt-5"><span class="bg-warning pr-3" style="border-radius:5px; padding:11px; font-size:18px; font-family:cursive; color:#1e272e">Sepet Özeti</span></h5>
                <div class="p-30 mb-5" style="background-color:#d2dae2; border-radius:5px">
                    <div id="container" class="border-bottom pb-2">

                        <div class="d-flex justify-content-between pt-4 px-3">
                            <h6>Tutar</h6>

                            <h6><span id="totalprice">@Model.TotalPrice()</span>₺</h6>
                        </div>
                        <div class="d-flex justify-content-between pt-1 px-3">
                            <h6 class="font-weight-medium">%10 KDV</h6>

                            <h6><span id="totalprice" class="font-weight-medium">@basketTotalPriceWithTax</span>₺</h6>
                        </div>

                        @if (Model.DiscountCode!="yok")
                        {
                            <div class="d-flex justify-content-between pt-1 px-3" id="couponArea">
                                <h6 class="font-weight-medium">İndirim Oranı(%  @Convert.ToInt32(Model.DiscountRate))</h6>
                                <h6><span id="totalprice" class="font-weight-medium">- @discountPrice.ToString("#.##") ₺</span></h6>
                            </div>
                        }
                       
                        <br />
                    </div>
                    <div>
                        <div class="d-flex justify-content-between mt-2 px-3 pt-2">
                            <h5>Toplam Tutar</h5>
                            <h6><span id="totalpricewithkdv" class="font-weight-medium" style="padding-top:10px;"><b> @Model.UpTotalPrice.ToString("#.##") </b></span><b>₺</b></h6>
                        </div>

                        @if (Model.DiscountCode != "yok")
                        {
                            <a asp-action="CancelDiscount" asp-controller="Basket" class="btn btn-block btn-danger font-weight-bold py-3">İndirim Kuponu İptal Et</a>
                        }
                        <br />


                        <form method="get" asp-controller="Cart" asp-action="Index" >
                            <button class="btn btn-lg btn-block btn-dark font-weight-bold" type="submit">Siparişi Tamamla</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>

}
else
{
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-md-12 text-center">
                <div class="alert alert-danger">
                    <h4>
                        Sepette Görüntülenecek Ürün Yok!
                    </h4>
                    <hr />
                    <h5>
                        Şimdi Kendine veya Sevdiklerine Bir Yemek <a href="/Menu/Index">Ismarla</a>  :)
                    </h5>
                </div>
            </div>
        </div>
    </div>
}
@section ScriptsUI {

    <script>
        $(document).ready(function () {
            // Body elementine "new-class" adında bir class ekleyelim
            $('body').addClass('sub_page');
        });


        $(document).ready(function () {

            $('#couponcode').on('input', function () {
                var couponcode = $(this).val();
                if (couponcode.trim() !== '') {
                    $('#btncouponcode').prop('disabled', false);
                } else {
                    $('#btncouponcode').prop('disabled', true);
                }
            });


            $('#btncouponcode').click(function (e) {
                e.preventdefault();
                var couponcode = $('#couponcode').val();
                let tablehtml = ``;
                $.ajax({
                    type: 'post',
                    url: '/basket/getcodeavailable',
                    data: { code: couponcode },
                    success: function (response) {
                        if (response.success) {

                        } else {
                            // danger alert
                            tablehtml += `<h6 class="font-weight-medium">uygulanan kupon: </h6>
                                     <h6><span id="totalprice" class="font-weight-medium">-${response.value}</span>₺</h6>`
                            $("#couponarea").html(tablehtml);

                        }
                    },
                    error: function () {
                        alert('an error occurred while processing your request.');
                    }
                });
            });



        });

    </script>




}