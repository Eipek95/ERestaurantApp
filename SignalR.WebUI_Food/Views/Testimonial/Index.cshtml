@model List<ResultTestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Referans ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adı Soyad</th>
                                        <th>Unvan</th>
                                        <th>Yorum</th>
                                        <th>Görsel Url</th>
                                        <th>Durum</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Name</td>
                                            <td>@item.Title</td>
                                            <td>@item.Comment</td>
                                            <td>@item.ImageUrl</td>
                                            <td>@item.Status</td>
                                            <td><a href="/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-outline-danger btn-round">Sil</a></td>
                                            <td><a href="/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-outline-success btn-round">Güncelle</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-info">Yeni Referans Girişi</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

