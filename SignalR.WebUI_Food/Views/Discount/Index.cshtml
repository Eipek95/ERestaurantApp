@model List<ResultDiscountViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimli ürünleri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ürün</th>
                                        <th>İndirim Oranı</th>
                                        <th>İndirim Açıklama</th>
                                        <th>İndirim Durumu</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Title</td>
                                            <td>@item.Amount</td>
                                            <td>@item.Description</td>
                                            <td><a href="/Discount/DeleteDiscount/@item.Id" class="btn btn-outline-warning">Durum</a></td>
                                            <td><a href="/Discount/DeleteDiscount/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Discount/UpdateDiscount/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/Discount/CreateDiscount/" class="btn btn-outline-info">Yeni İndirimli Ürün Girişi</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

