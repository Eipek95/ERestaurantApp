@model CreateDiscountViewModel
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İndirimli Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İndirimli Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Title">Ürün Adı</label>
								<input type="text" class="form-control" asp-for="Title">
							</div>
							<div class="form-group">
								<label asp-for="Amount">Ürün İndirim Oranı</label>
								<input type="text" class="form-control" asp-for="Amount">
							</div>
							<div class="form-group">
								<label asp-for="ImageUrl">Görsel Url</label>
								<input type="text" class="form-control" asp-for="ImageUrl">
							</div>
							<div class="form-group">
								<label asp-for="Description">Açıklama</label>
								<textarea type="text" class="form-control" asp-for="Description" rows="5" cols="10"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-outline-primary" type="submit">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


