@model CreateContactViewModel
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label asp-for="Location">Lokasyon</label>
								<input type="text" class="form-control" asp-for="Location">
							</div>
							<div class="form-group">
								<label asp-for="Phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone">
							</div>
							<div class="form-group">
								<label asp-for="Mail">Email</label>
								<input type="email" class="form-control" asp-for="Mail">
							</div>
							<div class="form-group">
								<label asp-for="Description">Açıklama</label>
								<textarea type="text" class="form-control" asp-for="Description" rows="5" cols="10"></textarea>
							</div>
							<div class="form-group">
								<label asp-for="Title">Alt Başlık</label>
								<input type="text" class="form-control" asp-for="Title">
							</div>
							<div class="form-group">
								<label asp-for="OpenDays">Çalışma Günleri</label>
								<input type="text" class="form-control" asp-for="OpenDays">
							</div>
							<div class="form-group">
								<label asp-for="OpenDaysDescription">Çalışma Günleri Açıklaması</label>
								<textarea type="text" class="form-control" asp-for="OpenDaysDescription" rows="5" cols="10"></textarea>
							</div>
							<div class="form-group">
								<label asp-for="OpenHours">Çalışma Saatleri</label>
								<textarea type="text" class="form-control" asp-for="OpenHours" rows="5" cols="10"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-outline-primary" type="submit">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


