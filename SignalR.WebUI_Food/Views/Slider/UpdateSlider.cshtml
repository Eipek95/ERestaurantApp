@model UpdateSliderViewModel
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Öne Çıkan Alan Düzenleme</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<input type="hidden" class="form-control" asp-for="Id">
							</div>
							<div class="form-group">
								<label asp-for="Title1">Başlık 1</label>
								<input type="text" class="form-control" asp-for="Title1">
							</div>
							<div class="form-group">
								<label asp-for="Description1">Açıklama 1</label>
								<textarea type="text" class="form-control" asp-for="Description1" rows="3" cols="10"></textarea>
							</div>
							<div class="form-group">
								<label asp-for="Title2">Başlık 2</label>
								<input type="text" class="form-control" asp-for="Title2">
							</div>
							<div class="form-group">
								<label asp-for="Description2">Açıklama 2</label>
								<textarea type="text" class="form-control" asp-for="Description2" rows="3" cols="10"></textarea>
							</div>
							<div class="form-group">
								<label asp-for="Title3">Başlık 3</label>
								<input type="text" class="form-control" asp-for="Title3">
							</div>
							<div class="form-group">
								<label asp-for="Description3">Açıklama 3</label>
								<textarea type="text" class="form-control" asp-for="Description3" rows="3" cols="10"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-outline-primary" type="submit">Düzenleme</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

