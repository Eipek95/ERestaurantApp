@model List<ResultCouponViewModel>
@{
    ViewData["Title"] = "CouponList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count=0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kupon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kupon Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Kupon ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kupon Kodu</th>
                                        <th>İndirim Oranı</th>
                                        <th>Durumu</th>
                                        <th>Kupon Ata</th>
                                        <th>Kupon Atanan Kullanıcılar</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Code</td>
                                            <td>@item.DiscountAmount</td>
                                            <td>@item.Status</td>
                                            <td><a href="/Coupon/GiveACoupon/@item.Id" class="btn btn-outline-info form-control">Ata</a></td>
                                            <td><a asp-controller="Coupon" asp-action="CouponUserList" asp-route-couponId="@item.Id" class="btn btn-outline-dark form-control">Gör</a></td>
                                            <td><a href="/Coupon/DeleteCoupon/@item.Id" class="btn btn-outline-danger form-control">Sil</a></td>
                                            <td><a href="/Coupon/UpdateCoupon/@item.Id" class="btn btn-outline-success form-control">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Coupon/CreateCoupon/" class="btn btn-outline-info">Yeni Kupon Oluştur</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


