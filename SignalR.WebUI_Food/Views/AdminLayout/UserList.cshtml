@model List<ResultUserViewModel>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Üye İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Üye Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Üyeler ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Üye Adı</th>
                                        <th>Üye Maili</th>
                                        <th>Üye Kullanıcı Adı</th>
                                        <th>Roller</th>
                                        <th>Rol İşlemleri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.UserName</td>
                                            <td>
                                                <user-roles-names user-id="@item.Id"></user-roles-names>
                                            </td>
                                            <td>
                                                <a asp-controller="Roles" asp-action="AssignRoleToUser" asp-route-id="@item.Id">Rol Ata</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

